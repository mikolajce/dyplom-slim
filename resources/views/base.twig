<script>
    let renderStart = new Date().getTime();
    window.onload = function () {
        let elapsed = new Date().getTime() - renderStart;
        document.cookie = "time=" + elapsed
        location.href = '/orders/' + Math.floor(Math.random() * 100)
    };
</script>
