{% block body %}
    <div>
        <h1>
            Szczegóły zamówienia #{{ id }}
        </h1>
        <article>
            <h1>
                {{ order.sum_total }} {{ client.surname }}, ID #{{ client.client_id }}
            </h1>
            <p>
                Adres:
                <strong>
                    {{ client.address }}
                </strong>
            </p>
            <h3>
                <a href="/clients">
                    Powrót
                </a>
            </h3>
        </article>
    </div>
{% endblock %}
